{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile cpp",
            "type": "shell",
            "command": "gcc",
            "args":[
                "./src/**.cpp",
                "-lstdc++",
                "-o",
                "./bin/Main.out",
                "-lm",
            ]
        },
        {
            "label": "run",
            "type":"shell",
            "command":"./bin/Main.out",
            "dependsOn":["compile cpp"],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}